<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
        <link rel="stylesheet" href="{{ asset('css/home.css') }}">
        <link rel="stylesheet" href="{{ asset('css/show.css') }}">

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}

        {% endblock %}
    </head>
    <body>
            <div class="nav">
                <a href="{{ path('home') }}"class="home" id="home">Médiatèque</a>
                <div class="btn_nav">
                    {% if app.user and app.user.role == 1 %}
                        <a href="{{ path('admin_page') }}" class="nav_link">Admin</a>
                    {% endif %}
                    {% if app.user %}
                    <a href="{{ path('mes_emprunts') }}" class="nav_link">Mes emprunts</a>
                        <a href="{{ path('logout_form') }}" class="nav_link">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('ragistration_form') }}" class="nav_link">S'inscrire</a>
                        <a href="{{ path('login_form') }}" class="nav_link">Se connecter</a>
                    {% endif %}
                </div>
            </div>
        {% block body %}
        {% endblock %}
    </body>
</html>
